<!-- index.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Star Wars Quote App</title>
  </head>

  <body>
    <h1>May Node and Express be with you.</h1>

    <form action="/quotes" method="POST">
      <input type="text" placeholder="name" name="name" id="input"/>
      <input type="text" placeholder="quote" name="quote" />
      <button type="submit">Submit</button>
    </form>
<!-- 
    <%= gratitudesInput %> -->

    <ol class="quotes">
        <!-- Loop through quotes -->
        <% for(var i = 0; i < gratitudesInput.length; i++) {%>
          <li class="quote">
            <!-- Output name from the iterated quote object -->
            <span><%= gratitudesInput[i].name %></span>:
            <!-- Output quote from the iterated quote object -->
            <span><%= gratitudesInput[i].quote %></span>
          </li>
        <% } %>
      </ol>

      <div>
        <h2>New Blessings invades!</h2>
        <p>
          Replace first blessing's quote with a quote written by your highness in different mode
        </p>
        <button id="update-button">Replace gratitude quote's quote</button>
      </div>

      <div>
        <h2>Remove Previous blessing!</h2>
        <p>
          Delete one gratitude journal's entry. Does nothing if there are no more gratitude Journal's entry
        </p>
        <button id="delete-button">Delete journal's old entry</button>
      </div>

      <div id="message"></div>
      <!----------------------- JS ---------------------->

      <script src="/main.js"></script>
  </body>
</html>